package {	import flash.display.*;	import flash.errors.*;	import flash.events.*;	import flash.geom.*;	import Wrapper;	import btn.Controler;	public class Index extends Sprite {		public var wrap:Wrapper;		public var crt:Controler;		public function Index() {			// マウスが押されたときに実行されるイベント			stage.addEventListener(MouseEvent.MOUSE_DOWN,MouseDownFunc);			wrap = new Wrapper();			this.addChild(wrap);			crt = new Controler();			this.addChild(crt);		}		// マウスが押されたときに実行される関数		function MouseDownFunc(e:MouseEvent):void {			// フルスクリーンに変更			stage.displayState = StageDisplayState.FULL_SCREEN;		}	}}